.item
  width: 100%
  // arbitrary chosen height
  height: 150px
  margin: 1.2rem 0
  +above(mobile)
    // arbitrary chosen height
    height: 200px

.item:first-of-type
  margin-top: 0

.item:last-of-type
  margin-bottom: 0

.item--link
  display: block
  width: 100%
  height: 100%
  transition: 0.2s transform bezier
  &:hover
    transform: scale(1.05)

.item--image
  width: auto
  height: 100%
  float: left

.item--title
  padding: 0 0.5rem 0 0.8rem
  font-size: 1rem
  line-height: 1.2rem
  +above(mobile)
    padding: 0 0.8rem
    font-size: 1.5rem
    line-height: 1.8rem

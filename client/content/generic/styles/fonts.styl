h1,h2,h3,h4,h5,h6,a,p,blockquote
  color: color-black
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-family: 'Lato'

html
  font-size: 90%

h1
  font-size: 3rem
  padding: 1rem 0 2rem

h2
  font-size: 2.2rem

a, p
  font-size: 1rem
  line-height: 1.2rem

a
  color: color-black
  text-decoration: none
  cursor: pointer
  &:hover
    color: color-darkgrey
